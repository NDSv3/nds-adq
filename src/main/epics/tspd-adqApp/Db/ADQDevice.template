record(waveform, "$(PREFIX):IPN") {
    field(DESC, "Product name of the device")
    field(DTYP, "asynInt8ArrayIn")
    field(FTVL, "CHAR")
    field(NELM, 32)
    field(INP,  "@asyn($(PREFIX), 0) ProductName")
    field(SCAN, "I/O Intr")
    field(PINI, "YES")
    field(PROC, "1")
}

